@model Ecole_Coranique.Models.Etudiant

@{
	ViewData["Title"] = "أنشطة الطالب";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>أنشطة الطالب</h1>

<div>
	<h4>الطالب</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Prenom)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Prenom)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Nom)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Nom)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Naissance)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Naissance)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Phone)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Phone)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Email)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Email)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Adresse)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Adresse)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Groupe)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Groupe.Nom)
		</dd>
	</dl>
	<hr />
	<div class="alert alert-dismissible alert-warning">
		<h4 class="alert-heading">الغيابات</h4>
	</div>
	@if (@Model.EtudiantAbsences.Any()) {
		<table class="table table-hover">
			<thead>
				<tr>
					<th scope="col">التاريخ</th>
					<th scope="col">الملاحظات</th>
				</tr>
			</thead>
			@foreach (var i in @Model.EtudiantAbsences) {
				<tbody>
					<tr>
						<td>@i.Date.ToString("yyyy-MM-dd")</td>
						<td>@i.Observation</td>
					</tr>
				</tbody>
			}
		</table>
	} else {
		<p class="text-warning">ليس هناك غيابات</p>
	}
	<div class="alert alert-dismissible alert-info">
		<h4 class="alert-heading">المراجعات</h4>
	</div>
	<table class="table table-hover">
		<thead>
			<tr>
				<th scope="col">التاريخ</th>
				<th scope="col">الأحزاب</th>
				<th scope="col">الأثمان</th>
			</tr>
		</thead>
		@foreach (var i in @Model.EtudiantRevisions) {
			<tbody>
				<tr>
					<td>@i.Date.ToString("yyyy-MM-dd")</td>
					<td>@i.Hizb.Nom</td>
					<td>@i.Huitieme.Nom</td>
				</tr>
			</tbody>
		}
	</table>
</div>
